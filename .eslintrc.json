{
    "globals": {
        "$"       : true,
        "angular" : true,
        "Firebase": true
    },
    "rules": {
        "no-console"     : [1],
        "indent"         : [1, 4],
        "quotes"         : [1, "single"],
        "linebreak-style": [2, "unix"],
        "semi"           : [2, "always"]
    },
    "env": {
        "es6"    : true,
        "browser": true,
        "node"   : true
    },
    "extends": "eslint:recommended"
}